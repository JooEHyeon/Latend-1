<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5588B3"
    tools:context=".UpdateInfo">

    <TextView
        android:id="@+id/update_status_now"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="현재 버전 : "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_title" />

    <TextView
        android:id="@+id/if_want"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="현재 최신 버전입니다."
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/version_now2" />

    <TextView
        android:id="@+id/if_not_want"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="업데이트가 필요합니다."
        android:textColor="#7E1C1C"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/if_want" />

    <TextView
        android:id="@+id/version_now"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:text="1.0.1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/update_status_now"
        app:layout_constraintTop_toBottomOf="@+id/update_title" />

    <TextView
        android:id="@+id/version_now2"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:text="1.0.1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/update_status_want"
        app:layout_constraintTop_toBottomOf="@+id/version_now" />

    <TextView
        android:id="@+id/update_status_want"
        android:layout_width="118dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="최신 버전 : "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_status_now" />

    <TextView
        android:id="@+id/update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="업데이트 정보"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="업데이트 하러가기"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/if_not_want" />
</androidx.constraintlayout.widget.ConstraintLayout>